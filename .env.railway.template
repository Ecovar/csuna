# railway variables set NEXT_PUBLIC_SUPABASE_URL=https://YOUR_PROJECT_ID.supabase.co --service frontend
# railway variables set NEXT_PUBLIC_SUPABASE_ANON_KEY=YOUR_ANON_KEY --service frontend
