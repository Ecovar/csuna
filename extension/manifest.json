{
  "manifest_version": 3,
  "name": "Cambridge AI Tutor",
  "version": "1.0.0",
  "description": "AI-powered educational support for Cambridge primary curriculum students",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "https://*.cambridge.org/*",
    "https://*.bbc.co.uk/bitesize/*",
    "https://*.khanacademy.org/*",
    "https://*.mathsisfun.com/*",
    "https://*.education.com/*",
    "http://localhost:*/*",
    "https://api.cambridge-ai-tutor.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.cambridge.org/*",
        "https://*.bbc.co.uk/bitesize/*",
        "https://*.khanacademy.org/*",
        "https://*.mathsisfun.com/*",
        "https://*.education.com/*"
      ],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Cambridge AI Tutor",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["tutor-widget.html", "tutor-widget.js", "tutor-widget.css"],
      "matches": ["<all_urls>"]
    }
  ]
}